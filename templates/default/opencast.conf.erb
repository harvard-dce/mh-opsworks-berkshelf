###
# This is the Opencast Opencast service configuration file.
###

##
# Opencast Opencast directory
# The default value is "/usr/share/opencast"
OPENCAST="<%= @opencast_root %>"

##
# Opencast node profile
# possible values are admin|engage|worker|all-in-one|hotload
# it's replaced during setup
OPENCAST_NODE_PROFILE="<%= @node_profile %>"

##
# Capture-Agent directory
# The default value is "$OPENCAST/capture-agent"
#CA=$OPENCAST/capture-agent

##
# This tells opencast to run as a specific user.
# Make shure this user exists and has the appropriate rights.
# The default value is "opencast"
OPENCAST_USER="opencast"

##
# Enable this if this machine is a CA.
# This will enable capture device autoconfiguration.
# The default value is "false"
IS_CA="false"

##
# Set the Opencast logfile directory
# The default value is "/var/log/opencast"
LOGDIR="<%= @opencast_log_directory %>"

##
# Set the logging level
# The default value is "WARN"
LOGLEVEL="WARN"

##
# Set the EclipseLink logging level
ECLIPSE_LOGLEVEL="CONFIG"

##
# Enable the debugger on the vm
# Default value is "false"
DEBUG="<%= @java_debug_enabled %>"


##
# Debug port
# The default value is "8000"
DEBUG_PORT="8000"

##
# Supend mode
# The default value is "n"
DEBUG_SUSPEND="n"

##
# Configuration directory
# The default value is "/etc/opencast"
FELIX_CONFIG_DIR="${OPENCAST}/etc"

##
# Felix work directory
# The default value is "/var/lib/mmaterhorn"
FELIX_WORK_DIR="${OPENCAST}/work"

##
# Felix cache directory
# The default value is "$FELIX_WORK_DIR/felix-cache"
FELIX_CACHE_DIR="${FELIX_WORK_DIR}/felix-cache"

##
# Configure Java Management Extensions (JMX)
# This is turned off by default. If you enable this, please make sure to
# configure and secure it properly (e.g. via firewall):
#JMX="-Dcom.sun.management.jmxremote"
#JMX="${JMX} -Dcom.sun.management.jmxremote.port=1099"
#JMX="${JMX} -Dcom.sun.management.jmxremote.authenticate=false"
#JMX="${JMX} -Dcom.sun.management.jmxremote.ssl=false"

##
# Additional options passed to Java.
# The default are no options.
ADD_OPTS="-Dorg.mortbay.jetty.Request.maxFormContentSize=-1"
