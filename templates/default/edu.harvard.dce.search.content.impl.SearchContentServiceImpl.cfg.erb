# This is a template in mh-opsworks-recipes

# Set this to true to enable transcript indexing.
enabled=<%= @enable %>

# The aws region
# Default: us-east1
aws.region=<%= @region %>

# The distribution bucket name for this cluster
aws.distribution.bucket=<%= @s3_distribution_bucket_name %>

# The lambda function name
aws.lambda.function=<%= @lambda_function %>

# Comma-separated list of flavors that should be treated as caption files.
# Default: captions/timedText,captions/dfxp
#caption.flavors=captions/timedText,captions/dfxp

# The name of the transcripts index
transcripts.index.name=<%= @stack_name %>-transcripts

# The transcripts index url
# Something like https://vpc-dev-transcript-indexer-es-76sexnyqtlky2gs7ftqj353f5i.us-east-1.es.amazonaws.com
transcripts.index.url=<%= @index_url %>

# Swap the caption path host, if necessary, before sending the captionUrl to the lambda
# For example, if the download is cloudfront, replace with the local s3 bucket distributed file
transcripts.index.host.replace=<%= @host_to_replace %>
transcripts.index.host.replacement=<%= @host_replacement %>
